post <- function(theta){
prior.mix(theta) * choose(43, 15) * theta^15 * (1 - theta)^28
}
theta <- seq(0, 1, length = 300)
plot(theta, post(theta), type = "l", xlab = "theta", ylab = "posterior")
theta = seq(0, 1, length = 300)
prior28 = dbeta(theta, shape1 = 2, shape2 = 8)
prior82 = dbeta(theta, shape1 = 8, shape2 = 2)
prior.mix <- function(theta){
(1/4) * (gamma(10) / (gamma(2) * gamma(8))) *
(3 * theta * (1 - theta)^7 + theta^7 * (1 - theta))
}
plot(theta, prior28, type = "l", lty = 2, lwd = 3, xlab = "theta", ylab = "density")
lines(theta, prior82, lty = 3, lwd = 3)
lines(theta, prior.mix(theta), lty = 1, lwd = 3)
legend(0.23, 3.5, c("prior Beta(2,8)", "prior Beta(8,2)", "mixed prior"),
lty = c(2, 3, 1), lwd = c(3, 3, 3))
